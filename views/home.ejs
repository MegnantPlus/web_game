    <style>
        .spacing { height: 50px; }
        .big-spacing { height: 80px; }
        
        /* Header styling - NEW LAYOUT */
        .header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 15px 30px;
            background: rgb(44, 42, 45);;
            position: relative;
        }
        
        .title {
            display: flex;
            align-items: center;
            gap: 30px;
        }
        
        /* Logo container - smaller */
        .header-logo {
            display: flex;
            align-items: center;
            justify-content: center;
        }
        
        .header-logo img {
            height: 60px; /* Much smaller - logo size */
            width: auto;
            max-width: 250px;
            object-fit: contain;
            filter: drop-shadow(0 2px 4px rgba(0, 0, 0, 0.3));
        }
        
        /* Menu buttons - now on the right side of logo */
        .header-menu {
            display: flex;
            gap: 20px;
            margin: 0;
            padding: 0;
            list-style: none;
        }
        
        .header-menu li {
            display: inline-block;
        }
        
        .header-menu a {
            color: white;
            text-decoration: none;
            font-size: 1.1rem;
            font-weight: 500;
            padding: 8px 16px;
            border-radius: 5px;
            transition: all 0.3s ease;
            background: rgba(255, 255, 255, 0.1);
        }
        
        .header-menu a:hover {
            background: rgba(255, 255, 255, 0.2);
            transform: translateY(-2px);
        }
        
        /* Auth section stays on the right */
        .auth-section {
            display: flex;
            align-items: center;
        }
        
        /* Responsive design */
        @media (max-width: 768px) {
            .header {
                flex-direction: column;
                gap: 15px;
                padding: 15px;
            }
            
            .title {
                flex-direction: column;
                gap: 15px;
                width: 100%;
            }
            
            .header-menu {
                justify-content: center;
                flex-wrap: wrap;
            }
            
            .header-logo img {
                height: 50px;
            }
        }
        
        /* New vote system */
        .vote-number {
            font-size: 1.2rem;
            font-weight: bold;
            min-width: 30px;
            text-align: center;
        }
        .vote-number.positive { color: #4CAF50; }
        .vote-number.negative { color: #ff4757; }
        
        /* Donate buttons */
        .donate-btn {
            padding: 15px 30px;
            border-radius: 10px;
            font-size: 1.1rem;
            cursor: pointer;
            font-weight: bold;
            border: none;
            transition: all 0.3s ease;
            display: flex;
            align-items: center;
            gap: 10px;
            min-width: 200px;
            justify-content: center;
        }
        .donate-btn:hover {
            transform: translateY(-3px);
            box-shadow: 0 10px 20px rgba(0,0,0,0.3);
        }
        .donate-btn.paypal {
            background: #FFD700;
            color: black;
        }
        .donate-btn.patreon {
            background: #28a745;
            color: white;
        }
        
        /* Update preview */
        .update-preview {
            background: rgba(255, 255, 255, 0.05);
            border-radius: 10px;
            padding: 20px;
            margin-bottom: 15px;
            border-left: 4px solid #2196F3;
            transition: all 0.3s ease;
        }
        .update-preview:hover {
            background: rgba(255, 255, 255, 0.08);
            transform: translateY(-2px);
        }
        .preview-login-prompt {
            background: rgba(255, 152, 0, 0.1);
            border: 1px solid rgba(255, 152, 0, 0.3);
            border-radius: 8px;
            padding: 10px 15px;
            color: #FF9800;
            font-size: 0.9rem;
            margin: 10px 0;
        }
        .preview-login-prompt a {
            color: #2196F3;
            font-weight: bold;
            text-decoration: underline;
            cursor: pointer;
        }
    </style>
</head>

